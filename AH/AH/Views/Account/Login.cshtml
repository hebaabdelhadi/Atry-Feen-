@using AH.Models
@model LoginViewModel
@{

}
<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.11.2/css/all.css"
          integrity="sha384-KA6wR/X5RY4zFAHpv/CnoG2UW1uogYfdnP67Uv7eULvTveboZJg0qUpmJZb5VqzN" crossorigin="anonymous">

    <style>
        body {
            background-image: url('/Content/Image/13.jpg');
            height: 100%;
            background-repeat: no-repeat;
            background-position: center;
            background-size: cover;
        }

        label {
            font-size: 1.6rem;
        }
        #img {
      background-color: rgba(252, 111, 111, 0.411);
      border-radius: 50%;
      width: 22%;
      height:22%;
      text-align: center;
      margin-top: -20%;
      margin-left:36%;

    }
    </style>
</head>

<body>

    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="text-center display-3" style="color:crimson;"><b>Atry Feen??</b></h1>
                <div class=" w-50 border border-danger mx-auto p-5" style="border-radius: 1em;margin-top:7%; background-color: rgba(228, 147, 147, 0.6);">

                    <img id="img" src="~/Content/image/Logo-Login.png">
                    <h2 class="text-white pl-5">Sign In</h2><br>
                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <label class="text-white">User Name : </label>
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control w-75" })<br>
                        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-white" })
                        <label class="text-white">Password : </label>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control w-75" })<br>
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-white" })
                        @Html.ValidationSummary(true, "", new { @class = "text-white" })
                        @Html.LabelFor(m => m.RememberMe, new { @class = "text-white pr-4" })
                        @Html.CheckBoxFor(m => m.RememberMe, new { style = "transform: scale(2);" })<br><br>
                        <input type="submit" value="Sign In" class="btn btn-danger" /><br><br>
                        <a href="/Account/Register" style="font-size:1.5rem;color:white;text-decoration:none;">Register as a new user</a>
                        <a href="/Home/About" style="font-size:1.5rem;color:white;text-decoration:none;float:right;">About Us</a><br>
                    }
                </div>

            </div>
        </div>
    </div>

</body>

</html>